                            Lastname = person.Lastname,
                            Patronymic = person.Patronymic,
                            Age = person.Age,
                            Birthday = person.Birthday.Value.ToString("dd.MM.yyyy"),
                            Bed = person.Bed,
                            Room = person.Room,
                            isChanged = person.isChanged,
