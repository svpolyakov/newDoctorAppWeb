        DepPatientsStyle = EmergencyPatientStyle = AllPatientStyle = null;
        MyPatientsStyle = StyleForFilter;
        PatientService.FilterType = 1;
        ShowData();
    }

    private void FilterToMyDepartmentPatientsClick()
    {
