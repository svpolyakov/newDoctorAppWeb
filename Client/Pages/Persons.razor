        await localStorage.SetItemAsync("HealthcareServiceId", hcsId);
        await localStorage.SetItemAsync("AppTitle", title);
        await localStorage.SetItemAsync("CurrentPage", Pages.WhatsNew);
        await localStorage.SetItemAsync("CurrentPersonID", person.PersonID);

        string stringifiedPerson = JsonConvert.SerializeObject(person);

        await localStorage.SetItemAsync("CurrentPatient", stringifiedPerson);

        string stringifiedInfo = JsonConvert.SerializeObject(patientInfo);

        await localStorage.SetItemAsync("CurrentPatientInfo", stringifiedInfo);

        navigationManager.NavigateTo(Pages.Diagnosis); //WhatNews
    }

    private async Task<InfoWindow> GetInfo(Patient person)
    {
        InfoWindow infoWindow = new InfoWindow();
        infoWindow.Admitted = person.AdmissionInfoDtc + person.AdmissionInfoInpatientSrv;
        infoWindow.Allergic = person.Allergic;
        infoWindow.IsWorking = person.IsWorkingStr;

        HttpResponseMessage lifeAnamnesys = await Http.GetAsync("Tools/Anamnesis?id=" + person.LifeAnamnesisID);
        HttpResponseMessage pathologyАnamnesis = await Http.GetAsync("Tools/Anamnesis?id=" + person.PathologyАnamnesisID);
        HttpResponseMessage diagnosAnamnesisID = await Http.GetAsync("Tools/Anamnesis?id=" + person.DiagnosAnamnesisID);

        if (lifeAnamnesys.StatusCode == System.Net.HttpStatusCode.OK)
        {
            infoWindow.LifeAnamnesis = await lifeAnamnesys.Content.ReadFromJsonAsync<AnamnesisInfoDto>();
        }
        if (pathologyАnamnesis.StatusCode == System.Net.HttpStatusCode.OK)
        {
            infoWindow.PathologyАnamnesis = await pathologyАnamnesis.Content.ReadFromJsonAsync<AnamnesisInfoDto>();
        }
        if (diagnosAnamnesisID.StatusCode == System.Net.HttpStatusCode.OK)
        {
            infoWindow.AnamnesisMKB = await diagnosAnamnesisID.Content.ReadFromJsonAsync<AnamnesisInfoDto>();
        }

        infoWindow.Diet = person.Diet;

        StateContainer.InfoWindow = infoWindow;
        return infoWindow;
    }

    void FindPatients()
    {
        List<Tuple<Patient, string>> searchIndex = PatientService.AllPersons.Select(x => new Tuple<Patient, string>(x, x.Lastname?.ToLower() + x.Firstname?.ToLower() + x.Patronymic?.ToLower() + x.ServiceCaseNumber?.ToLower())).ToList();
        List<Patient> tempPatientsResult = new List<Patient>(PatientService.AllPersons);

        if (!string.IsNullOrWhiteSpace(SearchQuery))
        {
            tempPatientsResult = searchIndex.Where(x => x.Item2.Contains(SearchQuery.ToLower())).Select(x => x.Item1).ToList();
        }

        if (!string.IsNullOrWhiteSpace(SelectedDepartment))
        {
            // filtering doctors by department
            Doctors = Doctors
            .Where(doctor => doctor.PersonnelPositionList.Count() > 0 && doctor.PersonnelPositionList
                .Where(position => position.Department != null && position.Department.ToLower().Equals(SelectedDepartment.ToLower()))
            .Count() > 0);

            tempPatientsResult = tempPatientsResult.Where(x =>
            {
                //string storeSearchResult = Departments.FirstOrDefault(n => n.BusinessElementFullName?.ToLower() == x.ResponsibleDep?.ToLower())?.BusinessElementID?.ToLower();
                string selectedResult = Departments.FirstOrDefault(n => n.BusinessElementFullName?.ToLower() == SelectedDepartment.ToLower())?.BusinessElementID?.ToLower();
                string storeSearchResult = Departments.FirstOrDefault(n => x.ResponsibleDepID?.ToLower() == selectedResult)?.BusinessElementID;


                return storeSearchResult != null;
            }
            ).ToList();
        }
        else
        {
            Doctors = FullDoctorsList;
        }

        if (!string.IsNullOrWhiteSpace(SelectedDoctor))
        {
            // filtering departments by doctor
            var currentDoctor = Doctors.Where(doctor => (doctor.SurName + " " + doctor.FirstName + " " + doctor.Patronymic).Equals(SelectedDoctor));
            var doctorDepartments = currentDoctor.First().PersonnelPositionList.Select(pos => pos.Department);
            Departments = Departments.Where(dep => doctorDepartments.Contains(dep.BusinessElementFullName));

            // todo: the implementation is incorrect due to bad data in "Doctor" property
            tempPatientsResult = tempPatientsResult.Where(x => (x.Doctor != null ? x.Doctor.Split(' ')[0].ToLower() : "").Equals(SelectedDoctor.ToLower().Split(' ')[0])).ToList();
            //tempPatientsResult = tempPatientsResult.Where(x => x.Doctor?.ToLower() == SelectedDoctor?.ToLower()).ToList();
        }
        else
        {
            Departments = FullDepartmentList;
        }

        tempPatientsResult = tempPatientsResult ?? new List<Patient>();
        AllPersons = tempPatientsResult.ToArray();
    }

